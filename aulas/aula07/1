#include <stdio.h>

int main(){

  int numero = 0;

    printf("Entre com m numero inteiro de 1 a 10: ");
    scanf("%i", &numero);
  
    printf("A tabuada de %i:\n",numero);
  for( int i=1; i <= 10000; i++ ) {
    printf("%i x %i = %i\n",i,numero, i * numero);}
  printf("---------------------------------------\n");
  for( int i=10; i>=1;i--){
    printf("%i x %i = %i\n",i,numero, i * numero);}
  

  for(int i=0; i<10; i--){
    printf("Ao infinito e alem!\n");
  }
  return 0;

}
